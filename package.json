{
  "name": "codex-site-editor",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace web\" \"npm run dev --workspace server\"",
    "dev:web": "npm run dev --workspace web",
    "dev:server": "npm run dev --workspace server",
    "dev:desktop": "npm run dev --workspace desktop",
    "build": "npm run build --workspace web --if-present && npm run build --workspace server --if-present",
    "build:desktop": "npm run build --workspace desktop",
    "lint": "npm run lint --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "package:desktop": "npm run package --workspace desktop"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
